# Treviwise Frontend Environment Variables
# Copy this file to .env and fill in your actual values

# ===== API CONFIGURATION =====
# Backend API URL (change for production)
REACT_APP_API_URL=http://localhost:8000

# ===== APPLICATION SETTINGS =====
# Application name and branding
REACT_APP_NAME=Treviwise
REACT_APP_TAGLINE=Personal Wealth Management Platform

# ===== DEVELOPMENT SETTINGS =====
# Development server port
PORT=3000

# Disable automatic browser opening
BROWSER=none

# ===== FEATURE FLAGS =====
# Enable/disable features for different environments
REACT_APP_ENABLE_DEMO_MODE=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true
REACT_APP_ENABLE_EXPORT_FEATURES=true

# ===== ANALYTICS & MONITORING =====
# Add analytics keys when ready for production
# REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id
# REACT_APP_SENTRY_DSN=your_sentry_dsn

# ===== EXTERNAL INTEGRATIONS =====
# Add any frontend-specific integrations
# REACT_APP_STRIPE_PUBLIC_KEY=your_stripe_public_key